<Window x:Class="CardCollectionGUI.addToUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardCollectionGUI"
        mc:Ignorable="d"
        Title="addToUserWindow" Height="300" Width="300" Background="Azure" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="button" Content="Add Card" Margin="107,157,107,0" VerticalAlignment="Top" Click="button_Click"/>
        <TextBox x:Name="nameTextBox" Height="23" Margin="87,67,87,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBox x:Name="cardTextBox" HorizontalAlignment="Left" Height="23" Margin="87,111,87,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="label" Content="Username:" HorizontalAlignment="Left" Margin="20,64,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="CardID*:" HorizontalAlignment="Left" Margin="20,108,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.079,1.231"/>
        <Label x:Name="label2" Content="* = Cards serialnumber" HorizontalAlignment="Left" Margin="20,235,0,0" VerticalAlignment="Top" FontSize="10"/>

    </Grid>
</Window>

<Window x:Class="CardCollectionGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardCollectionGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="User ID:" HorizontalAlignment="Left" Margin="35,35,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="101,38,0,0" TextWrapping="Wrap" Text="Write User ID" VerticalAlignment="Top" Width="120" TextChanged="textBox_TextChanged"/>
        <Button x:Name="button" Content="Create User" HorizontalAlignment="Left" Margin="60,90,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="binderbutton" Content="See Binder" Width="Auto" Height="Auto" Margin="324,130,20,20" Click="binderbutton_Click">
            <Button.Background>
                <ImageBrush ImageSource="Images/Disneybog.jpg"></ImageBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
